{
  "name": "transmute-framework",
  "version": "0.1.0",
  "description": "An ethereum smart contract framework.",
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -rf build docs coverage .nyc_output",
    "start": "ts-node src/index.ts",
    "build": "node node_modules/typescript/bin/tsc --p tsconfig.json",
    "watch": "node node_modules/typescript/bin/tsc --w --p tsconfig.json",
    "production": "npm run build && node bin/index.js",
    "pretest": "npm run build",
    "testrpc": "pm2 start testrpc",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "docs": "typedoc --out docs src && /usr/bin/open -a '/Applications/Google Chrome.app' docs/index.html ",
    "deploy:docs": "firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transmute-industries/transmute-framework.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "security",
    "javascript",
    "typescript",
    "truffle",
    "transmute"
  ],
  "contributors": [
    "Eric Olszewski <eolszewski@gmail.com>",
    "Orie Steele <orie@or13.io>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/transmute-industries/transmute-framework/issues"
  },
  "homepage": "https://github.com/transmute-industries/transmute-framework#readme",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "ts-node": "^2.1.2",
    "typedoc": "^0.5.3",
    "typescript": "^2.1.4",
    "nyc": "^10.3.2"
  },
  "dependencies": {
    "@conclurer/local-storage-fallback": "^1.0.2",
    "@digix/truffle-lightwallet-provider": "0.0.12",
    "ethereumjs-testrpc": "^3.0.5",
    "truffle": "^3.2.2",
    "truffle-contract": "^2.0.0",
    "web3": "^0.19.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
